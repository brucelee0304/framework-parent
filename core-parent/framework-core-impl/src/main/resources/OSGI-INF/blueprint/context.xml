<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <bean id="jndiService" class="com.kalix.framework.core.impl.system.JndiService"/>
    <service id="sys_jndiService" interface="com.kalix.framework.core.api.system.IJndiService" ref="jndiService"/>
    <bean id="pollingService" class="com.kalix.framework.core.impl.system.PollingManagerServiceImpl"/>
    <service id="sys_pollingService" interface="com.kalix.framework.core.api.system.IPollingManagerService" ref="pollingService"/>

    <!--监听IPolling项模块的加载和卸载-->
    <reference-list interface="com.kalix.framework.core.api.system.IPollingService" member-type="service-reference"
                    availability="optional">
        <reference-listener bind-method="register" unbind-method="unregister">
            <bean class="com.kalix.framework.core.impl.listener.PollingListener"/>
        </reference-listener>
    </reference-list>
</blueprint>
