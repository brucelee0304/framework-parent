<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

    <bean id="cgService" class="com.kalix.framework.webapp.cg.CodeGeneration"></bean>

    <camelContext id="cgCamel" xmlns="http://camel.apache.org/schema/blueprint">
        <restConfiguration component="servlet" bindingMode="json">
            <componentProperty key="servletName" value="CamelServletCG"/>
            <dataFormatProperty key="prettyPrint" value="true"/>
        </restConfiguration>

        <!-- defines the rest services using the context-path /cg -->
        <rest path="/" consumes="application/json;charset=utf-8" produces="application/json;charset=utf-8">
            <!--<description>code generation rest service</description>-->
            <!-- this is a rest POST to create a cg -->
            <post id="route-addCG" type="com.kalix.framework.webapp.cg.TemplateBean"
                  outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Create a CG</description>
                <to uri="bean:cgService?method=addTemplate"/>
            </post>
        </rest>
        <!--<rest path="/test/{id}" consumes="application/json;charset=utf-8" produces="application/json;charset=utf-8">-->
            <!--&lt;!&ndash; this is a rest GET to view a cg by the given id &ndash;&gt;-->
            <!--<get id="route-getCG" outType="com.kalix.framework.webapp.cg.TemplateBean">-->
                <!--<description>Find CG by id</description>-->
                <!--<to uri="bean:cgService?method=getTemplate()"/>-->
            <!--</get>-->
        <!--</rest>-->
    </camelContext>
</blueprint>